(function(){
  var $stopsList = $("#stops-list");
  $("#departures-list").empty();
  $("#routes-container span").fadeIn();
  $stopsList.empty();
  <% if @stops.any? %>
    <% @stops.each do |stop| %>
      $stopsList.append("<%= j(render partial: 'shared/stop', locals: { stop: stop } )%> ");
    <% end %>
  <% else %>
    $stopsList.append("<%= j(render partial: 'shared/no_stops') %>");
  <% end %>
  $stopsList.effect("shake", {times: 1, distance:2});
})();
