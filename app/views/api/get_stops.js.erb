$("#departures-list").empty();
$("#stops-list").empty();
<% if @stops.any? %>
  <% @stops.each do |stop| %>
    $("#stops-list").append("<%= j(render partial: 'shared/stop', locals: { stop: stop } )%> ");
  <% end %>
<% else %>
  $("#stops-list").append("<%= j(render partial: 'shared/no_stops') %>");
<% end %>
$("#stops-list").effect("shake", {times: 1, distance:2});
$("#routes-container span").fadeIn();
